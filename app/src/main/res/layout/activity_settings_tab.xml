<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buttonSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsTab">

    <TextView
        android:id="@+id/appVer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="16dp"
        android:text="Ver. 0.0.1"
        android:textColor="#A6A6A6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/useElevatorSwitch"
        android:layout_width="178dp"
        android:layout_height="41dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="117dp"
        android:text="Use Elevator"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/doorAccessSwitch"
        android:layout_width="178dp"
        android:layout_height="41dp"
        android:layout_marginTop="28dp"
        android:text="Staff Access"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/useElevatorSwitch"
        app:layout_constraintTop_toBottomOf="@+id/useElevatorSwitch" />

</androidx.constraintlayout.widget.ConstraintLayout>